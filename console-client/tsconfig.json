{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/console-client",
    "rootDir": "..",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "paths": {
      "@shared": ["../shared/index.ts"],
      "@shared/*": ["../shared/*"]
    },
    "baseUrl": ".."
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["../client/**/*", "../server/**/*"]
}
